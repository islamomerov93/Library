<Window x:Class="Library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="L I B R A R Y" Height="650" Width="1000" 
        WindowStartupLocation="CenterScreen" Cursor="Pen" Icon="/Images/MainIcon.png"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="LayoutTransform" >
                <Setter.Value>
                    <ScaleTransform x:Name="scaleTransform" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="LayoutTransform.ScaleX" To="1.3" Duration="0:0:0.3" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="LayoutTransform.ScaleX" To="1" Duration="0:0:0.3" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Button.Content" Value="&#xE739;" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=WindowState}" Value="Maximized">
                    <Setter Property="Button.Content" Value="&#xE923;" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MenuBtn" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Cyan" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="SnapsToDevicePixels" Value="True" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="4" Background="{TemplateBinding Background}">
                            <Grid>
                                <ContentPresenter x:Name="MyContentPresenter" Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" />
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Black" />
                                <Setter Property="Foreground" Value="Cyan" />
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="OrangeRed" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Storyboard x:Key="sbShowLeftMenu" >
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="-240,0,0,0" To="0,0,0,0" DecelerationRatio=".9" Duration="0:0:1" />
        </Storyboard>
        <Storyboard x:Key="sbHideLeftMenu">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To="-240,0,0,0" AccelerationRatio=".9" Duration="0:0:1" />
        </Storyboard>


        <Storyboard x:Key="sbShowTopMenu" >
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,-80,0,0" To="0,0,0,0" DecelerationRatio=".9" Duration="0:0:1" />
        </Storyboard>
        <Storyboard x:Key="sbHideTopMenu">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To="0,-80,0,0" AccelerationRatio=".9" Duration="0:0:1" />
        </Storyboard>


        <Storyboard x:Key="sbShowRightMenu" >
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,-108,0" To="0,0,0,0" DecelerationRatio=".9" Duration="0:0:1" />
        </Storyboard>
        <Storyboard x:Key="sbHideRightMenu">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To="0,0,-108,0" AccelerationRatio=".9" Duration="0:0:1" />
        </Storyboard>

        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="Times New Roman" />
            <Setter Property="FontSize" Value="14" />
        </Style>
    </Window.Resources>
    <Border Padding="2" BorderThickness="5" BorderBrush="Black" Background="#111F26" Margin="0" CornerRadius="20">
        <Grid>
            <Border Height="40" Background="#01000000" VerticalAlignment="Top"
            CornerRadius="10,10,0,0" MouseLeftButtonDown="DragWindow"/>
            <StackPanel Panel.ZIndex="2" Name="pnlLeftMenu" Orientation="Horizontal" Height="638" HorizontalAlignment="Left" Margin="-240,0,0,0">
                <Border BorderBrush="#1D66CB" BorderThickness="2" Width="230" Background="#1C7589" CornerRadius="017,20,20,20">
                    <StackPanel>
                        <TextBlock Margin="10,30,5,0" FontSize="22" FontWeight="SemiBold" Foreground="Black">BOOKS</TextBlock>
                        <Grid Margin="5,0,5,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Style="{StaticResource MenuBtn}" Content="Add"/>
                            <Button Style="{StaticResource MenuBtn}" Grid.Column="1" Content="Update"/>
                            <Button Style="{StaticResource MenuBtn}" Grid.Column="2" Content="Delete"/>
                        </Grid>
                        <TextBlock Margin="10,30,5,0" FontSize="22" FontWeight="SemiBold" Foreground="Black">CUSTOMERS</TextBlock>
                        <Grid Margin="5,0,5,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Style="{StaticResource MenuBtn}">Add</Button>
                            <Button Style="{StaticResource MenuBtn}" Grid.Column="1">Update</Button>
                            <Button Style="{StaticResource MenuBtn}" Grid.Column="2">Delete</Button>
                        </Grid>
                        <TextBlock Margin="10,30,5,0" FontSize="22" FontWeight="SemiBold" Foreground="Black">EMPLOYEES</TextBlock>
                        <Grid Margin="5,0,5,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Style="{StaticResource MenuBtn}">Add</Button>
                            <Button Style="{StaticResource MenuBtn}" Grid.Column="1">Update</Button>
                            <Button Style="{StaticResource MenuBtn}" Grid.Column="2">Delete</Button>
                        </Grid>
                        <TextBlock Margin="10,30,5,0" FontSize="22" FontWeight="SemiBold" Foreground="Black">BRANCHES</TextBlock>
                        <Grid Margin="5,0,5,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Style="{StaticResource MenuBtn}">Add</Button>
                            <Button Style="{StaticResource MenuBtn}" Grid.Column="1">Update</Button>
                            <Button Style="{StaticResource MenuBtn}" Grid.Column="2">Delete</Button>
                        </Grid>
                    </StackPanel>
                </Border>
                <Grid>
                    <Button Name="btnLeftMenuHide" Width="40" Height="40" Click="btnLeftMenuHide_Click" Visibility="Hidden" VerticalAlignment="Top" Margin="3,0,0,0" Background="Transparent" BorderThickness="0" BorderBrush="#1D66CB">
                        <StackPanel>
                            <Image Source="/Images/Menu.png" />
                        </StackPanel>
                    </Button>
                    <Button Name="btnLeftMenuShow" Width="40" Height="40" Click="btnLeftMenuShow_Click" VerticalAlignment="Top" Margin="6,5,0,0" Background="Transparent" BorderThickness="0" BorderBrush="#1D66CB">
                        <StackPanel>
                            <Image Source="/Images/Menu.png" />
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>

            <StackPanel Panel.ZIndex="2" Name="pnlTopMenu" Orientation="Vertical" Width="300" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,-80,0,0">
                <Border BorderBrush="#1D66CB" BorderThickness="1" Height="70" Background="#1C7589" Opacity="0.9" CornerRadius="0,0,20,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Margin="10" HorizontalAlignment="Right" FontWeight="SemiBold">Name</TextBlock>
                            <TextBlock Margin="10,0,10,10" HorizontalAlignment="Right" FontWeight="SemiBold">Surname</TextBlock>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Margin="10" HorizontalAlignment="Left" Text="{Binding User.Name}" Grid.Column="1" FontWeight="SemiBold"/>
                            <TextBlock Margin="10" HorizontalAlignment="Left" Text="{Binding User.Surname}" Grid.Column="1" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <Grid>
                    <Button Name="btnTopMenuHide" Width="40" Height="40" Click="btnTopMenuHide_Click" Visibility="Hidden" Background="Transparent" BorderThickness="0,0,0,1" BorderBrush="#1D66CB">
                        <StackPanel>
                            <Image Source="/Images/User.png"/>
                        </StackPanel>
                    </Button>
                    <Button Name="btnTopMenuShow" Width="40" Height="40" Click="btnTopMenuShow_Click" Background="Transparent" BorderThickness="0,1,0,0" BorderBrush="#1D66CB" Margin="0,5,0,0">
                        <StackPanel>
                            <Image Source="/Images/User.png" />
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>

            <StackPanel Panel.ZIndex="2" Name="pnlRightMenu" Orientation="Horizontal" Height="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,-108,0">
                <Grid>
                    <Button Name="btnRightMenuHide" Width="40" Height="40" Click="btnRightMenuHide_Click" Visibility="Hidden" Margin="0,0,3,0" Background="Transparent" BorderThickness="0">
                        <StackPanel>
                            <Image Source="/Images/Close.png" />
                        </StackPanel>
                    </Button>
                    <Button Name="btnRightMenuShow" Width="40" Height="40" Click="btnRightMenuShow_Click" VerticalAlignment="Top" Margin="0,7,5,0" Background="Transparent" BorderThickness="0" BorderBrush="#1D66CB">
                        <StackPanel>
                            <Image Source="/Images/Close.png" />
                        </StackPanel>
                    </Button>
                </Grid>
                <Border BorderBrush="#1D66CB" BorderThickness="1" Width="95" Background="Transparent"  Margin="0,5,3,5" Opacity="0.5" CornerRadius="20,20,20,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14">Are you sure?</TextBlock>
                        <TextBlock x:Name="tbTime" Foreground="White" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
                    </Grid>

                </Border>
            </StackPanel>
            
            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="151*"/>
                    <ColumnDefinition Width="146*"/>
                </Grid.ColumnDefinitions>
                <TabControl Background="Transparent" Grid.ColumnSpan="2" Margin="25 25" TabStripPlacement="Top">
                    <TabItem Header="Books" Background="LightSalmon" FontSize="14" FontWeight="SemiBold" FontFamily="Arial" Opacity="0.6">
                        <Border Background="DarkGray" BorderThickness="5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="4.1"/>
                                    <RowDefinition Height="164.7"/>
                                    <RowDefinition Height="22.7"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <StackPanel Margin="0,0,-0.4,0.2" Grid.RowSpan="3">
                                    <Border Background="DarkGray" BorderThickness="3">
                                        <TextBlock Height="25" FontSize="18" Background="Peru" TextAlignment="Center" FontWeight="SemiBold">Books</TextBlock>
                                    </Border>
                                    <Grid Background="NavajoWhite">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Height="25" FontSize="15" HorizontalAlignment="Right" Margin="5 10 5 2">Book Title</TextBlock>
                                            <TextBlock Height="25" FontSize="15" HorizontalAlignment="Right" Margin="5 5 5 5">Author Name</TextBlock>
                                            <TextBlock Height="25" FontSize="15" HorizontalAlignment="Right" Margin="5 5 5 4">Purchase Cost</TextBlock>
                                            <TextBlock Height="25" FontSize="15" HorizontalAlignment="Right" Margin="5 5 5 25">Sale Cost</TextBlock>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBox FontSize="15" Height="25" Margin="5 5" Text="{Binding CurrentBook.Title,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}">
                                                <TextBox.Style>
                                                    <Style TargetType="{x:Type TextBox}">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding StateBook, UpdateSourceTrigger=PropertyChanged}" Value="1">
                                                                <Setter Property="IsEnabled" Value="True"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBox.Style>
                                            </TextBox>
                                            <TextBox FontSize="15" Height="25" Margin="5 5" Text="{Binding CurrentBook.AuthorName,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}">
                                                <TextBox.Style>
                                                    <Style TargetType="{x:Type TextBox}">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding StateBook, UpdateSourceTrigger=PropertyChanged}" Value="1">
                                                                <Setter Property="IsEnabled" Value="True"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBox.Style>
                                            </TextBox>
                                            <TextBox FontSize="15" Height="25" Margin="5 5" Text="{Binding CurrentBook.PurchaseCost,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}">
                                                <TextBox.Style>
                                                    <Style TargetType="{x:Type TextBox}">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding StateBook, UpdateSourceTrigger=PropertyChanged}" Value="1">
                                                                <Setter Property="IsEnabled" Value="True"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBox.Style>
                                            </TextBox>
                                            <TextBox FontSize="15" Height="25" Margin="5 5" Text="{Binding CurrentBook.SaleCost,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}">
                                                <TextBox.Style>
                                                    <Style TargetType="{x:Type TextBox}">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding StateBook, UpdateSourceTrigger=PropertyChanged}" Value="1">
                                                                <Setter Property="IsEnabled" Value="True"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBox.Style>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2">
                                            <TextBlock Height="25" FontSize="15" HorizontalAlignment="Right" Margin="5 10 5 5">Quantity</TextBlock>
                                            <TextBlock Height="25" FontSize="15" HorizontalAlignment="Right" Margin="5 5">Branch</TextBlock>
                                            <TextBlock Height="25" FontSize="15" HorizontalAlignment="Right" Margin="5 5">Note</TextBlock>
                                        </StackPanel>

                                        <StackPanel Grid.Column="3">
                                            <TextBox FontSize="15" Height="25" Margin="5 5" Text="{Binding CurrentBook.Quantity,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}">
                                                <TextBox.Style>
                                                    <Style TargetType="{x:Type TextBox}">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding StateBook, UpdateSourceTrigger=PropertyChanged}" Value="1">
                                                                <Setter Property="IsEnabled" Value="True"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBox.Style>
                                            </TextBox>
                                            <ComboBox FontSize="15" Margin="5 5" ItemsSource="{Binding Branches, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" 
                                  SelectedItem="{Binding CurrentBook.Branch}" DisplayMemberPath="Address">
                                                <ComboBox.Style>
                                                    <Style TargetType="{x:Type ComboBox}">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding StateBook, UpdateSourceTrigger=PropertyChanged}" Value="1">
                                                                <Setter Property="IsEnabled" Value="True"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ComboBox.Style>
                                            </ComboBox>
                                            <TextBox Height="60" FontSize="15" Margin="5 5 5 15"  Text="{Binding CurrentGroup.Note,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}">
                                                <TextBox.Style>
                                                    <Style TargetType="{x:Type TextBox}">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding StateBook, UpdateSourceTrigger=PropertyChanged}" Value="1">
                                                                <Setter Property="IsEnabled" Value="True"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBox.Style>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Column="4">
                                            <Button x:Name="btnAddBook" Height="30" Margin="4 4" Command="{Binding AddBook}" CommandParameter="1">
                                                <Button.BitmapEffect>
                                                    <DropShadowBitmapEffect Color="Black" Direction="320" Softness="1" ShadowDepth="10" Opacity="0.5" />
                                                </Button.BitmapEffect>
                                                <Button.Style>
                                                    <Style TargetType="{x:Type Button}">
                                                        <Setter Property="Content" Value="Add"/>
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding ="{Binding ElementName=MainListBook, Path=SelectedIndex}" Value="-1">
                                                                <Setter Property="IsEnabled" Value="True"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding StateBook, UpdateSourceTrigger=PropertyChanged}" Value="1">
                                                                <Setter Property="Content" Value="Add"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            <Button Height="30" Margin="4 4" Command="{Binding EditBook}" CommandParameter="2">
                                                <Button.BitmapEffect>
                                                    <DropShadowBitmapEffect Color="Black" Direction="320" Softness="1" ShadowDepth="10" Opacity="0.5" />
                                                </Button.BitmapEffect>
                                                <Button.Style>
                                                    <Style TargetType="{x:Type Button}">
                                                        <Setter Property="Content" Value="Edit"/>
                                                        <Setter Property="IsEnabled" Value="True"/>
                                                        <Style.Triggers>
                                                            <DataTrigger 
                                             Binding ="{Binding ElementName=MainListBook, Path=SelectedIndex}" Value="-1">
                                                                <Setter Property="IsEnabled" Value="false"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding StateBook, UpdateSourceTrigger=PropertyChanged}" Value="2">
                                                                <Setter Property="IsEnabled" Value="False"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            <Button Height="30" Margin="4 4" Command="{Binding RejectBook}" CommandParameter="1">
                                                <Button.BitmapEffect>
                                                    <DropShadowBitmapEffect Color="Black" Direction="320" Softness="1" ShadowDepth="10" Opacity="0.5" />
                                                </Button.BitmapEffect>
                                                <Button.Style>
                                                    <Style TargetType="{x:Type Button}">
                                                        <Setter Property="Content" Value="Reject"/>
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding StateBook, UpdateSourceTrigger=PropertyChanged}" Value="1">
                                                                <Setter Property="IsEnabled" Value="True"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding StateBook, UpdateSourceTrigger=PropertyChanged}" Value="2">
                                                                <Setter Property="IsEnabled" Value="True"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            <Button Height="30" Margin="4 4" Command="{Binding DeleteBook}" CommandParameter="4">
                                                <Button.BitmapEffect>
                                                    <DropShadowBitmapEffect Color="Black" Direction="320" Softness="1" ShadowDepth="10" Opacity="0.5" />
                                                </Button.BitmapEffect>
                                                <Button.Style>
                                                    <Style TargetType="{x:Type Button}">
                                                        <Setter Property="Content" Value="Delete"/>
                                                        <Setter Property="IsEnabled" Value="True"/>
                                                        <Style.Triggers>
                                                            <DataTrigger 
                                             Binding ="{Binding ElementName=MainListBook, Path=SelectedIndex}" Value="-1">
                                                                <Setter Property="IsEnabled" Value="false"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                                <ListView x:Name="MainListBook" Background="PapayaWhip" Foreground="Black" Grid.Row="2" ItemsSource="{Binding MyFilteredBooks}" 
                      SelectedItem="{Binding SelectedBook,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                      FontWeight="DemiBold"
                      ScrollViewer.VerticalScrollBarVisibility="Visible" 
                      ScrollViewer.HorizontalScrollBarVisibility="Visible" Margin="0,22.2,-0.4,-0.2" Grid.RowSpan="2">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="Background" Value="PaleGoldenrod" />
                                            <Setter Property="BorderBrush" Value="BlanchedAlmond" />
                                            <Setter Property="BorderThickness" Value="2" />
                                            <Style.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Foreground" Value="Red" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.Style>
                                        <Style TargetType="{x:Type ListView}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding StateBook, UpdateSourceTrigger=PropertyChanged}" Value="1">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                    <Setter Property="SelectedIndex" Value="-1"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding StateBook, UpdateSourceTrigger=PropertyChanged}" Value="2">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListView.Style>
                                    <ListView.View>
                                        <GridView >
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=No}" Header=" No " Width="Auto"/>
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=Title}" Header=" Title " Width="Auto"/>
                                            <GridViewColumn Header=" Author Name " Width="Auto">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Padding="0.5" Text="{Binding AuthorName}" TextAlignment="Center"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Header=" Purchase Cost " Width="Auto">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Padding="5,0" Text="{Binding PurchaseCost}" TextAlignment="Center"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Header=" Sale Cost " Width="Auto">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Padding="0.5" Text="{Binding SaleCost}" TextAlignment="Center"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Header=" Stock " Width="Auto">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Padding="0.5" Text="{Binding Quantity}" TextAlignment="Center"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Header=" Branch " Width="Auto">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Padding="0.5" Text="{Binding Branch.Address}" TextAlignment="Center"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Grid>
                        </Border>
                    </TabItem>

                    <TabItem  Header="Customers" Background="Wheat" FontSize="14" FontWeight="SemiBold" FontFamily="Arial" Opacity="0.6">
                        <Border Background="DarkGray" BorderThickness="5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="4.1"/>
                                    <RowDefinition Height="164.7"/>
                                    <RowDefinition Height="22.7"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <StackPanel Margin="0,0,-0.4,0.2" Grid.RowSpan="3">
                                    <Border Background="DarkGray" BorderThickness="3">
                                        <TextBlock Height="25" FontSize="18" Background="CadetBlue" TextAlignment="Center" FontWeight="SemiBold">Customers</TextBlock>
                                    </Border>
                                    <Grid Background="LightCyan">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
