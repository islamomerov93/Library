<Window x:Class="Library.MainWindow"
        x:Name="MW"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Height="650" Width="1000" 
        WindowStartupLocation="CenterScreen" Cursor="Pen" Icon="/Images/MainIcon.png"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="LayoutTransform" >
                <Setter.Value>
                    <ScaleTransform x:Name="scaleTransform" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="LayoutTransform.ScaleX" To="1.3" Duration="0:0:0.3" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="LayoutTransform.ScaleX" To="1" Duration="0:0:0.3" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <Storyboard x:Key="sbShowLeftMenu" >
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="-240,0,0,0" To="0,0,0,0" DecelerationRatio=".9" Duration="0:0:0.5" />
        </Storyboard>
        <Storyboard x:Key="sbHideLeftMenu">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To="-240,0,0,0" AccelerationRatio=".9" Duration="0:0:0.3" />
        </Storyboard>


        <Storyboard x:Key="sbShowTopMenu" >
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,-80,0,0" To="0,0,0,0" DecelerationRatio=".9" Duration="0:0:0.3" />
        </Storyboard>
        <Storyboard x:Key="sbHideTopMenu">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To="0,-80,0,0" AccelerationRatio=".9" Duration="0:0:0.3" />
        </Storyboard>


        <Storyboard x:Key="sbShowRightMenu" >
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,-108,0" To="0,0,0,0" DecelerationRatio=".9" Duration="0:0:0.3" />
        </Storyboard>
        <Storyboard x:Key="sbHideRightMenu">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To="0,0,-108,0" AccelerationRatio=".9" Duration="0:0:0.3" />
        </Storyboard>


    </Window.Resources>
    <Border Padding="2" BorderThickness="5" BorderBrush="Black" Background="#111F26" Margin="0" CornerRadius="20">
        <Border Padding="1" BorderThickness="1" BorderBrush="OrangeRed" Background="#111F26" Margin="0" CornerRadius="20">
            <Grid>
                <Label Height="40" Background="#01000000" VerticalAlignment="Top" MouseLeftButtonDown="DragWindow" MouseDoubleClick="Double_Click"/>
                <Grid x:Name="MainGrid">
                    
                </Grid>
                <StackPanel Panel.ZIndex="2" Name="pnlLeftMenu" Orientation="Horizontal" HorizontalAlignment="Left" Margin="-238,0,0,0" Grid.RowSpan="2">
                    <Border BorderBrush="#1D66CB" BorderThickness="2" Width="230" Background="#1C7589" CornerRadius="017,20,20,20" >
                        <StackPanel>
                            <TextBlock Margin="10,30,5,0" FontSize="22" FontWeight="SemiBold" Foreground="Black">BOOKS</TextBlock>
                            <Grid Margin="5,0,5,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Button Style="{StaticResource MenuBtn}" Content="Add" Command="{Binding AddBookUC}"/>
                                <Button Style="{StaticResource MenuBtn}" Grid.Column="1" Content="Update" Command="{Binding AddBookUC}"/>
                                <Button Style="{StaticResource MenuBtn}" Grid.Column="2" Content="Delete" Command="{Binding AddBookUC}"/>
                            </Grid>
                            <TextBlock Margin="10,30,5,0" FontSize="22" FontWeight="SemiBold" Foreground="Black">CUSTOMERS</TextBlock>
                            <Grid Margin="5,0,5,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Button Style="{StaticResource MenuBtn}">Add</Button>
                                <Button Style="{StaticResource MenuBtn}" Grid.Column="1">Update</Button>
                                <Button Style="{StaticResource MenuBtn}" Grid.Column="2">Delete</Button>
                            </Grid>
                            <TextBlock Margin="10,30,5,0" FontSize="22" FontWeight="SemiBold" Foreground="Black">EMPLOYEES</TextBlock>
                            <Grid Margin="5,0,5,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Button Style="{StaticResource MenuBtn}">Add</Button>
                                <Button Style="{StaticResource MenuBtn}" Grid.Column="1">Update</Button>
                                <Button Style="{StaticResource MenuBtn}" Grid.Column="2">Delete</Button>
                            </Grid>
                            <TextBlock Margin="10,30,5,0" FontSize="22" FontWeight="SemiBold" Foreground="Black">BRANCHES</TextBlock>
                            <Grid Margin="5,0,5,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Button Style="{StaticResource MenuBtn}">Add</Button>
                                <Button Style="{StaticResource MenuBtn}" Grid.Column="1">Update</Button>
                                <Button Style="{StaticResource MenuBtn}" Grid.Column="2">Delete</Button>
                            </Grid>
                        </StackPanel>
                    </Border>
                    <Grid>
                        <Button Name="btnLeftMenuHide" Width="40" Height="40" Click="btnLeftMenuHide_Click" Visibility="Hidden" VerticalAlignment="Top" Margin="3,0,0,0">
                            <StackPanel>
                                <Image Source="/Images/Menu.png" />
                            </StackPanel>
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="100">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="OrangeRed"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Name="btnLeftMenuShow" Width="40" Height="40" Click="btnLeftMenuShow_Click" VerticalAlignment="Top" Margin="10,5,0,0">
                            <StackPanel>
                                <Image Source="/Images/Menu.png" />
                            </StackPanel>
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="100">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="OrangeRed"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </StackPanel>
                <StackPanel Panel.ZIndex="2" Name="pnlTopMenu" Orientation="Vertical" Width="300" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="343,-80,342.6,0">
                <Border BorderBrush="#1D66CB" BorderThickness="1" Height="70" Background="#1C7589" Opacity="0.9" CornerRadius="0,0,20,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Margin="10" HorizontalAlignment="Right" FontWeight="SemiBold">Name</TextBlock>
                            <TextBlock Margin="10,0,10,10" HorizontalAlignment="Right" FontWeight="SemiBold">Surname</TextBlock>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Margin="10" HorizontalAlignment="Left" Text="{Binding User.Name}" Grid.Column="1" FontWeight="SemiBold"/>
                            <TextBlock Margin="10" HorizontalAlignment="Left" Text="{Binding User.Surname}" Grid.Column="1" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <Grid>
                    <Button Name="btnTopMenuHide" Width="40" Height="40" Click="btnTopMenuHide_Click" Visibility="Hidden" Background="Transparent" BorderThickness="0,0,0,1" BorderBrush="#1D66CB">
                        <StackPanel>
                            <Image Source="/Images/User.png"/>
                        </StackPanel>
                    </Button>
                    <Button Name="btnTopMenuShow" Width="40" Height="40" Click="btnTopMenuShow_Click" Background="Transparent" BorderThickness="0,1,0,0" BorderBrush="#1D66CB" Margin="0,5,0,0">
                        <StackPanel>
                            <Image Source="/Images/User.png" />
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel> 
                <StackPanel Panel.ZIndex="2" Name="pnlRightMenu" Orientation="Horizontal" Height="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,-108,0">
                    <Grid>
                        <Button Name="btnRightMenuHide" Width="40" Height="40" Click="btnRightMenuHide_Click" Visibility="Hidden" Margin="0,0,3,0">
                            <StackPanel>
                                <Image Source="/Images/Close.png" />
                            </StackPanel>
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="100">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="OrangeRed"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Name="btnRightMenuShow" Width="40" Height="40" Click="btnRightMenuShow_Click" VerticalAlignment="Top" Margin="0,5,10,0">
                            <StackPanel>
                                <Image Source="/Images/Close.png" />
                            </StackPanel>
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="100">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="OrangeRed"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                    <Border BorderBrush="#1D66CB" BorderThickness="1" Width="95" Background="Transparent"  Margin="0,5,3,5" Opacity="0.5" CornerRadius="20,20,20,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14">Are you sure?</TextBlock>
                            <TextBlock x:Name="tbTime" Foreground="White" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14">00:00:03</TextBlock>
                        </Grid> 
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>
